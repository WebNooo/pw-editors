<Window x:Class="PckEditor.ModalWindow.TextFile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PckEditor.ModalWindow" xmlns:toolkit="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="TextFile" Height="450" Width="800">
    <Grid>
        <toolkit:RichTextBox x:Name="_richTextBox" BorderBrush="Gray"
                      Text="{Binding FileData}" 
                      ScrollViewer.VerticalScrollBarVisibility="Auto" />
    </Grid>
</Window>
